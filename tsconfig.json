{
  "compilerOptions": {
    "target": "ES2020",           // or a version you prefer
    "module": "ESNext",           // tells TS to emit ESM imports/exports
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,      // helps interop with some packages
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
